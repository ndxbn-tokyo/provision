{
  "private": true,
  "name": "vagrantfiles",
  "scripts": {
    "fmt": "run-p format:*",
    "format:yaml": "prettier --write \"**/*.yml\"",
    "format:markdown": "prettier --write \"**/*.md\"",
    "test": "run-p lint:*",
    "lint:yaml": "prettier -l \"**/*.yml\"",
    "lint:markdown": "prettier -l \"**/*.md\""
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "prettier": "^1.15.3"
  }
}
